<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>


    <!-- Customize your theme here. -->
    <style name="AppThemeSplash" parent="Theme.AppCompat.NoActionBar">

        <item name="android:windowFullscreen">true</item>
        <item name="android:windowBackground">@mipmap/splash</item>
        <item name="android:windowTranslucentNavigation">true</item>
    </style>


    <style name="CustomWelcomeScreenTheme" parent="WelcomeScreenTheme.Light">




        <item name="welcomeButtonSkipText">Saltar</item>
        <item name="welcomeButtonDoneText">Empezar</item>
        <!-- Color of button text and titles/headings (in built in fragments)
      By default, this is also the color of the done/next button -->
        <item name="android:textColorPrimary">@color/colorBlanco</item>

        <!-- Color of other text
            By default, this is used for the skip button text color -->
        <item name="android:textColorSecondary">@color/colorBlanco</item>



    </style>




</resources>
